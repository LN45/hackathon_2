{{ form_start(form) }}
<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="row justify-content-center">
                <div class="form-group">
                    <label class="control-label">{{ form_label(form.firstName) }}</label>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text prep-color"><i class="fas fa-user-circle"></i></span>
                            </div>
                            {{ form_widget(form.firstName) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
       <div class="col-4">
           <div class="row justify-content-center">
               <div class="form-group">
                   <label class="control-label">{{ form_label(form.lastname) }}</label>
                   <div class="form-group">
                       <div class="input-group mb-3">
                           <div class="input-group-prepend">
                               <span class="input-group-text prep-color"><i class="fas fa-user-circle"></i></span>
                           </div>
                           {{ form_widget(form.lastname) }}
                       </div>
                   </div>
               </div>
           </div>
       </div>
       <div class="col-4">
           <div class="row justify-content-center">
               <div class="form-group">
                   <label class="control-label">{{ form_label(form.email) }}</label>
                   <div class="form-group">
                       <div class="input-group mb-3">
                           <div class="input-group-prepend">
                               <span class="input-group-text prep-color"><i class="fas fa-at"></i></span>
                           </div>
                           {{ form_widget(form.email) }}
                       </div>
                   </div>
               </div>
           </div>
       </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-5 offset-1">
            <div class="row justify-content-center">
                <div class="form-group">
                    <label class="control-label">{{ form_label(form.company) }}</label>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text prep-color"><i class="far fa-building"></i></span>
                            </div>
                            {{ form_widget(form.company) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-5 offset-1">
            <div class="row justify-content-center">
                <div class="form-group">
                    <label class="control-label">{{ form_label(form.event) }}</label>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text prep-color"><i class="fas fa-glass-cheers"></i></span>
                            </div>
                            {{ form_widget(form.event) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="justify-content-center row mb-5">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
</div>
{{ form_end(form) }}
