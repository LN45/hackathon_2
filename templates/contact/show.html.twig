{% extends 'base.html.twig' %}

{% block title %}{{ contact.firstName }} {{ contact.lastName }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <a href="{{ path('contact_index') }}"><i class="fas fa-chevron-circle-left fa-3x"></i></a>
        </div>
        <h1 class="text-center title_detail_event">Statistiques de {{ contact.firstName }} {{ contact.lastName }}</h1>
            <tbody>
            <table class="table table_evenement">
            <th>
                J'ai participé à {{ nbEvent.nbEvent }} événement(s)
            </th>
            <th>
                J'ai rencontré  {{ nbNewContact.nbNewContact }} nouveaux contacts.
            </th>
        </table>
        <h1 class="text-center title_detail_event">Détail de {{ contact.firstName}} {{ contact.lastName }}</h1>
        <div class="row mt-5">
            <table class="table table_evenement">
                <tbody>
                <tr>
                    <th>Prénom</th>
                    <td>{{ contact.firstName }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ contact.lastName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ contact.email }}</td>
                </tr>
                <tr>
                    <th>Compagnie</th>
                    <td>{{ contact.company.name }}</td>
                </tr>
                <tr>
                    <th>Evènement</th>
                    <td>{{ contact.event.name }}</td>
                </tr>
                <tr>
                    <th>Golds</th>
                    <td>{{ gold.quantity }}<img src="/images/gold.png" width="50px" height="50px"><a href="{{ path('shop', {'id': contact.id}) }}" class="btn btn-primary mt-0 ml-3">Dépenser</a></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
            <a class="btn btn-primary ml-5 mx-auto" href="{{ path('contact_edit', {'id': contact.id}) }}">Modifier l'évènement</a>
    </div>


{% endblock %}
