<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {% block header %}

        {% include 'navbar.html.twig' %}
    {% include 'banner.html.twig' %}
    {% endblock %}
    {% for label, messages in app.flashes %}
        <audio id="audioPlayer" preload="auto"><source src="../sound/ping.mp3" type="audio/mpeg">Your browser does not support the audio element.
        </audio>
        {% for message in messages %}
            <div class="row mt-3">
                <div class="col-lg-6 mx-auto alert alert-dismissible alert-{{ label }} flash-{{ label }} fade show">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    {{ message }} {% if label == "success" %} <img src="/images/gold.png"  width="50px" height="50px">
                </div>
                {% endif %}

                <script>
                    let test = document.querySelector('#audioPlayer');
                    test.play();
                </script>
            </div>
        {% endfor %}
    {% endfor %}
    <main>
        {% block body %}
        {% endblock %}
    </main>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>

