{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <a href="{{ path('event_index') }}"><i class="fas fa-chevron-circle-left fa-3x"></i></a>
                <h1 class="text-center title_detail_event">Détail de l'évènement</h1>
        </div>


        <div class="row mt-5">
            <table class="table">
                <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ event.name }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td></td>
                </tr>
                <tr>
                    <th>Organisateur</th>
                    <td>{{ event.organizer }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ event.description }}</td>
                </tr>
                </tbody>
            </table>
        </div>

       <div class="row mt-5">
           <h4 class="mx-auto">Participants</h4>

           <table class="table">
               <tbody>
               <tr>
                   <th>Prénom</th>
                   <th>Nom</th>
                   <th>Email</th>
                   <th>Société</th>
               </tr>
               {% for contact in contacts %}
                   <tr>
                       <td>{{contact.firstName}}</td>
                       <td>{{contact.lastName}}</td>
                       <td>{{contact.email}}</td>
                       <td>{{contact.companyName}}</td>
                   </tr>
               {% endfor %}
               </tbody>
           </table>
       </div>
        <div class="row">
            <div class="col-4">
                <a class="btn btn-primary ml-5" href="{{ path('event_edit', {'id': event.id}) }}">Modifier l'évènement</a>
            </div>
            <div class="col-4">
                <a class="btn btn-primary ml-5" href="{{ path('satisfaction_quizz_new', {'event': event.id}) }}">Créer un Formulaire</a>
            </div>
            <div class="col-4">
                {% include "event/_mail.html.twig" %}
            </div>
        </div>
        <div class="row justify-content-center">

                {{ include('event/_delete_form.html.twig') }}

        </div>
    </div>



{% endblock %}
