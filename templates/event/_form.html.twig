{{ form_start(form) }}
<div class="container">

    <div class="row d-flex flex-column">
        <div class="row col-lg-12 justify-content-center">
            <div class="sphere">
                <div class="snowBall">
                    <img class="preview-img" id="previewPicture"
                         src="https://via.placeholder.com/300.png/ffffff/ffffff/O%20https://placeholder.com/">
                </div>
            </div>

        </div>
        <div class="row col-lg-12 justify-content-center mt-5">
            <span class="col-lg-12 text-center">Taille recommand√©e : 300*300 - (poids <2Mo)</span>
            <span class="col-lg-12 text-center" id="pictureName">{{ form_label(form.pictureFile) }}</span>
            <span class="invalid-feedback d-block text-center" id="errorFile"></span>
        </div>
        <div class="form-group col-lg-4 mx-auto">
            {{ form_widget(form.pictureFile) }}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group">
            <label class="control-label">{{ form_label(form.name) }}</label>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text prep-color"><i class="fas fa-user-circle"></i></span>
                    </div>
                    {{ form_widget(form.name) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group">
            <label class="control-label">{{ form_label(form.type) }}</label>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text prep-color"><i class="fas fa-cogs"></i></span>
                    </div>
                    {{ form_widget(form.type) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group">
            <label class="control-label">{{ form_label(form.organizer) }}</label>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text prep-color"><i class="fas fa-chalkboard-teacher"></i></span>
                    </div>
                    {{ form_widget(form.organizer) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group">
            <label class="control-label">{{ form_label(form.date) }}</label>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text prep-color"><i class="fas fa-clock"></i></span>
                    </div>
                    {{ form_widget(form.date) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group">
            <label class="control-label">{{ form_label(form.description) }}</label>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text prep-color"><i class="fas fa-file-alt"></i></span>
                    </div>
                    {{ form_widget(form.description) }}
                </div>
            </div>
        </div>
    </div>
   <div class="justify-content-center row mb-5">
       <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
   </div>

</div>

{{ form_end(form) }}

