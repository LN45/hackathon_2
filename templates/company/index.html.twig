{% extends 'base.html.twig' %}

{% block title %}Liste des Entreprises{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <a href="{{ path('company_new') }}" class="btn btn-primary"><i class="fas fa-plus-circle"></i>Ajouter une compagnie</a>
            <div class="ml-5">
                <h1 class=" text-center ml-5">Liste des compagnies</h1>
            <div>
        </div>
        <div class="row mt-5">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Partenaire</th>
                    <th class="text-right">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for company in companies %}
                    <tr>
                        <td>{{ company.id }}</td>
                        <td>{{ company.name }}</td>
                        <td>{{ company.type }}</td>
                        <td>{{ company.partenaire ? 'Yes' : 'No' }}</td>
                        <td class="text-right">
                            <a href="{{ path('company_show', {'id': company.id}) }}"><i class="far fa-eye"></i></a>
                            <a href="{{ path('company_edit', {'id': company.id}) }}"><i class="fas fa-pen"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune compagnie trouv√©e</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}