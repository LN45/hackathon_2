{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Liste des compagnies</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Partenaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.type }}</td>
                <td>{{ company.partenaire ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button class="mx-auto button_new btn btn-outline-dark"><a href="{{ path('company_new') }}">Ajouter une compagnie</a></button>

{% endblock %}
